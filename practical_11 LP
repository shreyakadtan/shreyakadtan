import java.util.*;

/*
 BestFit_FirstFit
 This program reads block sizes and process sizes from the user,
 then runs two allocation strategies:
 1) First Fit  (assign first block that fits)
 2) Best Fit   (assign block with smallest leftover after allocation)
 Each strategy prints which block (if any) each process gets.
*/
public class BestFit_FirstFit {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Read number of memory blocks and their sizes
        System.out.print("Enter number of memory blocks: ");
        int nb = sc.nextInt();
        int[] blockSize = new int[nb];
        for (int i = 0; i < nb; i++) {
            System.out.print("Enter size of block " + (i + 1) + ": ");
            blockSize[i] = sc.nextInt();
        }

        // Read number of processes and their required sizes
        System.out.print("Enter number of processes: ");
        int np = sc.nextInt();
        int[] processSize = new int[np];
        for (int i = 0; i < np; i++) {
            System.out.print("Enter size of process " + (i + 1) + ": ");
            processSize[i] = sc.nextInt();
        }

        // Run First Fit using a clone of block sizes (so best fit uses original sizes too)
        System.out.println("\n===== FIRST FIT ALLOCATION =====");
        firstFit(blockSize.clone(), nb, processSize, np);

        // Run Best Fit using a fresh clone
        System.out.println("\n===== BEST FIT ALLOCATION =====");
        bestFit(blockSize.clone(), nb, processSize, np);

        sc.close();
    }

    // FIRST FIT: For each process, find the first block (from index 0) that fits.
    static void firstFit(int[] blockSize, int nb, int[] processSize, int np) {
        int[] allocation = new int[np];          // allocation[i] = index of block allocated to process i
        Arrays.fill(allocation, -1);             // -1 means not allocated

        // iterate processes one by one
        for (int i = 0; i < np; i++) {
            // scan all blocks from start
            for (int j = 0; j < nb; j++) {
                if (blockSize[j] >= processSize[i]) {   // if block j can fit process i
                    allocation[i] = j;                  // allocate block j
                    blockSize[j] -= processSize[i];     // reduce remaining size of block j
                    break;                              // move to next process
                }
            }
        }

        // display results
        display(allocation, processSize);
    }

    // BEST FIT: For each process, find the block with smallest leftover (i.e., minimal blockSize[j] >= processSize[i])
    static void bestFit(int[] blockSize, int nb, int[] processSize, int np) {
        int[] allocation = new int[np];
        Arrays.fill(allocation, -1);

        // For each process, choose best block index
        for (int i = 0; i < np; i++) {
            int bestIdx = -1;                        // -1 means not found yet
            for (int j = 0; j < nb; j++) {
                if (blockSize[j] >= processSize[i]) {
                    // choose the smallest block that still fit the process
                    if (bestIdx == -1 || blockSize[j] < blockSize[bestIdx])
                        bestIdx = j;
                }
            }
            if (bestIdx != -1) {
                allocation[i] = bestIdx;
                blockSize[bestIdx] -= processSize[i]; // reduce block remaining size
            }
        }

        display(allocation, processSize);
    }

    // Utility to print allocation table
    static void display(int[] allocation, int[] processSize) {
        System.out.println("\nProcess No.\tProcess Size\tBlock No.");
        for (int i = 0; i < processSize.length; i++) {
            System.out.printf("  %d\t\t%d\t\t%s\n",
                    (i + 1), processSize[i],
                    (allocation[i] != -1 ? (allocation[i] + 1) : "Not Allocated"));
        }
    }
}
