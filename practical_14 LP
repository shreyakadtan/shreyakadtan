import java.util.*;

/*
 FirstFit_WorstFit
 This program demonstrates:
 - First Fit  (first sufficient block from start)
 - Worst Fit  (largest sufficient block)
*/
public class FirstFit_WorstFit {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Input block sizes
        System.out.print("Enter number of memory blocks: ");
        int nb = sc.nextInt();
        int[] blockSize = new int[nb];
        for (int i = 0; i < nb; i++) {
            System.out.print("Enter size of block " + (i + 1) + ": ");
            blockSize[i] = sc.nextInt();
        }

        // Input process sizes
        System.out.print("Enter number of processes: ");
        int np = sc.nextInt();
        int[] processSize = new int[np];
        for (int i = 0; i < np; i++) {
            System.out.print("Enter size of process " + (i + 1) + ": ");
            processSize[i] = sc.nextInt();
        }

        // First Fit run
        System.out.println("\n===== FIRST FIT ALLOCATION =====");
        firstFit(blockSize.clone(), nb, processSize, np);

        // Worst Fit run
        System.out.println("\n===== WORST FIT ALLOCATION =====");
        worstFit(blockSize.clone(), nb, processSize, np);

        sc.close();
    }

    // First Fit implementation
    static void firstFit(int[] blockSize, int nb, int[] processSize, int np) {
        int[] allocation = new int[np];
        Arrays.fill(allocation, -1);

        for (int i = 0; i < np; i++) {
            for (int j = 0; j < nb; j++) {
                if (blockSize[j] >= processSize[i]) {
                    allocation[i] = j;
                    blockSize[j] -= processSize[i];
                    break;
                }
            }
        }

        display(allocation, processSize);
    }

    // Worst Fit: choose the largest available block that fits the process
    static void worstFit(int[] blockSize, int nb, int[] processSize, int np) {
        int[] allocation = new int[np];
        Arrays.fill(allocation, -1);

        for (int i = 0; i < np; i++) {
            int worstIdx = -1;
            for (int j = 0; j < nb; j++) {
                if (blockSize[j] >= processSize[i]) {
                    if (worstIdx == -1 || blockSize[j] > blockSize[worstIdx])
                        worstIdx = j;
                }
            }
            if (worstIdx != -1) {
                allocation[i] = worstIdx;
                blockSize[worstIdx] -= processSize[i];
            }
        }

        display(allocation, processSize);
    }

    static void display(int[] allocation, int[] processSize) {
        System.out.println("\nProcess No.\tProcess Size\tBlock No.");
        for (int i = 0; i < processSize.length; i++) {
            System.out.printf("  %d\t\t%d\t\t%s\n",
                    (i + 1), processSize[i],
                    (allocation[i] != -1 ? (allocation[i] + 1) : "Not Allocated"));
        }
    }
}
