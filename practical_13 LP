import java.util.*;

/*
 FirstFit_NextFit
 This program demonstrates:
 - First Fit: search from start every time
 - Next Fit : continue search from last allocated block (circular)
*/
public class FirstFit_NextFit {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Input blocks
        System.out.print("Enter number of memory blocks: ");
        int nb = sc.nextInt();
        int[] blockSize = new int[nb];
        for (int i = 0; i < nb; i++) {
            System.out.print("Enter size of block " + (i + 1) + ": ");
            blockSize[i] = sc.nextInt();
        }

        // Input processes
        System.out.print("Enter number of processes: ");
        int np = sc.nextInt();
        int[] processSize = new int[np];
        for (int i = 0; i < np; i++) {
            System.out.print("Enter size of process " + (i + 1) + ": ");
            processSize[i] = sc.nextInt();
        }

        // Run First Fit and Next Fit using clones
        System.out.println("\n===== FIRST FIT ALLOCATION =====");
        firstFit(blockSize.clone(), nb, processSize, np);

        System.out.println("\n===== NEXT FIT ALLOCATION =====");
        nextFit(blockSize.clone(), nb, processSize, np);

        sc.close();
    }

    // First Fit: scan from beginning for each process
    static void firstFit(int[] blockSize, int nb, int[] processSize, int np) {
        int[] allocation = new int[np];
        Arrays.fill(allocation, -1);

        for (int i = 0; i < np; i++) {
            for (int j = 0; j < nb; j++) {
                if (blockSize[j] >= processSize[i]) {
                    allocation[i] = j;
                    blockSize[j] -= processSize[i]; // reduce remaining block size
                    break;
                }
            }
        }

        display(allocation, processSize);
    }

    // Next Fit: start searching from the last allocated block index (variable j)
    static void nextFit(int[] blockSize, int nb, int[] processSize, int np) {
        int[] allocation = new int[np];
        Arrays.fill(allocation, -1);
        int j = 0; // pointer where last search left off

        for (int i = 0; i < np; i++) {
            int count = 0;           // ensure we don't loop forever (at most nb checks)
            while (count < nb) {
                if (blockSize[j] >= processSize[i]) {
                    allocation[i] = j;           // allocate here
                    blockSize[j] -= processSize[i];
                    break;
                }
                j = (j + 1) % nb;   // move pointer (circular)
                count++;
            }
            // leave j where allocation/search ended for the next iteration
        }

        display(allocation, processSize);
    }

    static void display(int[] allocation, int[] processSize) {
        System.out.println("\nProcess No.\tProcess Size\tBlock No.");
        for (int i = 0; i < processSize.length; i++) {
            System.out.printf("  %d\t\t%d\t\t%s\n",
                    (i + 1), processSize[i],
                    (allocation[i] != -1 ? (allocation[i] + 1) : "Not Allocated"));
        }
    }
}
