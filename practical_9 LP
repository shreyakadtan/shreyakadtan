import java.util.*;

// SchedulingSimulation.java
// A single-file Java program that simulates two CPU scheduling algorithms:
// 1) Priority Scheduling (non-preemptive)
// 2) Round Robin Scheduling (preemptive, time-quantum based)
// This version includes full inline, beginner-friendly comments explaining every step.


// ---------------------------
// Class to represent a process
// ---------------------------
class Process {
    int pid;             // Process ID (P1, P2, ...)
    int arrivalTime;     // When the process arrives in the ready queue
    int burstTime;       // Total CPU time required by the process
    int priority;        // Priority (lower number = higher priority)
    int remainingTime;   // Remaining time left to finish (used by RR)
    int completionTime;  // Time when this process finishes execution
    int waitingTime;     // Total waiting time in ready queue
    int turnaroundTime;  // Total time from arrival to completion

    // Constructor: initialize the process with pid, arrival time, burst time and priority
    Process(int pid, int at, int bt, int pr) {
        this.pid = pid;
        this.arrivalTime = at;
        this.burstTime = bt;
        this.priority = pr;
        this.remainingTime = bt; // at start remaining = burst
    }
}


// ---------------------------
// Main class and main method
// ---------------------------
public class SchedulingSimulation {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Step 1: Input number of processes
        System.out.print("Enter number of processes: ");
        int n = sc.nextInt();
        Process[] processes = new Process[n];

        // Step 2: Input each process details (arrival time, burst time, priority)
        for (int i = 0; i < n; i++) {
            System.out.println("\nEnter details for Process " + (i + 1));
            System.out.print("Arrival Time: ");
            int at = sc.nextInt();
            System.out.print("Burst Time: ");
            int bt = sc.nextInt();
            System.out.print("Priority (lower = higher priority): ");
            int pr = sc.nextInt();
            // Create Process object and store in array
            processes[i] = new Process(i + 1, at, bt, pr);
        }

        // Step 3: Run Priority Scheduling (non-preemptive)
        System.out.println("\n===== Priority (Non-Preemptive) Scheduling =====");
        priorityScheduling(processes.clone()); // use clone so original array stays unchanged

        // Step 4: Run Round Robin Scheduling (preemptive)
        System.out.println("\n===== Round Robin Scheduling =====");
        rrScheduling(processes.clone(), sc);

        sc.close();
    }


    // ------------------------------------------------------------
    // PRIORITY SCHEDULING (Non-Preemptive)
    // ------------------------------------------------------------
    static void priorityScheduling(Process[] p) {
        int n = p.length;

        // 'completed' counts finished processes, 'time' is the CPU clock
        int completed = 0, time = 0;

        // Totals to compute averages at the end
        int totalWT = 0, totalTAT = 0;

        // 'done' marks which processes are finished to skip them in selection
        boolean[] done = new boolean[n];

        // Gantt chart: we record order as strings like "P1", "P2", ...
        List<String> gantt = new ArrayList<>();

        // Loop until every process has completed
        while (completed < n) {
            int idx = -1; // index of chosen process to run next
            int bestPriority = Integer.MAX_VALUE; // smaller priority number = better

            // Find the highest-priority process that has already arrived and is not done
            for (int i = 0; i < n; i++) {
                // check arrival and not finished
                if (!done[i] && p[i].arrivalTime <= time && p[i].priority < bestPriority) {
                    bestPriority = p[i].priority;
                    idx = i;
                }
            }

            // If idx == -1, no process is ready at current time --> CPU idle, advance time
            if (idx == -1) {
                time++;          // move time forward 1 unit and try again
                continue;        // go back to top of while loop
            }

            // Record process in Gantt chart (it will run to completion here)
            gantt.add("P" + p[idx].pid);

            // Run the selected process to completion (non-preemptive)
            time += p[idx].burstTime;                     // advance time by its burst time
            p[idx].completionTime = time;                 // record completion time
            p[idx].turnaroundTime = p[idx].completionTime - p[idx].arrivalTime; // CT - AT
            p[idx].waitingTime = p[idx].turnaroundTime - p[idx].burstTime;      // TAT - BT

            // Update totals and mark done
            totalWT += p[idx].waitingTime;
            totalTAT += p[idx].turnaroundTime;
            done[idx] = true;
            completed++;
        }

        // ---------------- display results for Priority Scheduling ----------------
        System.out.println("\nPID\tAT\tBT\tPR\tCT\tTAT\tWT");
        for (Process pr : p) {
            // Print each process row: PID, Arrival, Burst, Priority, Completion, Turnaround, Waiting
            System.out.printf("P%d\t%d\t%d\t%d\t%d\t%d\t%d\n",
                    pr.pid, pr.arrivalTime, pr.burstTime, pr.priority,
                    pr.completionTime, pr.turnaroundTime, pr.waitingTime);
        }

        // Print average waiting time and average turnaround time
        System.out.printf("\nAverage Waiting Time: %.2f\n", (double) totalWT / n);
        System.out.printf("Average Turnaround Time: %.2f\n", (double) totalTAT / n);

        // Print Gantt Chart in a readable format
        System.out.println("\nGantt Chart:");
        System.out.print("| ");
        for (String s : gantt) System.out.print(s + " | ");
        System.out.println();
    }


    // ------------------------------------------------------------
    // ROUND ROBIN SCHEDULING (Preemptive with Time Quantum)
    // ------------------------------------------------------------
    static void rrScheduling(Process[] p, Scanner sc) {
        // Ask user the time quantum (time-slice)
        System.out.print("\nEnter Time Quantum: ");
        int quantum = sc.nextInt();

        int n = p.length;
        int time = 0;           // CPU clock
        int completed = 0;      // number of finished processes
        int totalWT = 0, totalTAT = 0; // totals for averages

        // Ready queue implemented as FIFO using LinkedList (Queue interface)
        Queue<Process> queue = new LinkedList<>();

        // Gantt chart to record execution order (each poll from queue adds an entry)
        List<String> gantt = new ArrayList<>();

        // Sort processes by arrival time so we can add them in correct order
        Arrays.sort(p, Comparator.comparingInt(x -> x.arrivalTime));

        // Seed the queue with the first process (earliest arrival)
        queue.add(p[0]);
        int i = 1; // index of the next process not yet added to queue

        // Continue until all processes are completed
        while (completed < n) {

            // If queue is empty but processes remain, fast-forward time to next arrival and enqueue it
            if (queue.isEmpty()) {
                if (i < n) {
                    time = p[i].arrivalTime; // jump time to arrival of next process
                    queue.add(p[i]);         // add that arriving process
                    i++;
                }
                continue; // go back to loop to poll the queue
            }

            // Get the process at front of queue (FIFO)
            Process current = queue.poll();

            // Record the fact that this process got CPU in gantt chart
            gantt.add("P" + current.pid);

            // Execute either for full quantum or for remaining time if it will finish
            if (current.remainingTime > quantum) {
                // Process will not finish in this quantum:
                current.remainingTime -= quantum; // reduce remaining time
                time += quantum;                  // advance clock by quantum
            } else {
                // Process will finish in this turn:
                time += current.remainingTime;    // advance clock by remaining time
                current.remainingTime = 0;        // it's finished now
                current.completionTime = time;    // set completion time
                current.turnaroundTime = current.completionTime - current.arrivalTime; // CT - AT
                current.waitingTime = current.turnaroundTime - current.burstTime;      // TAT - BT

                // update totals and completed count
                totalWT += current.waitingTime;
                totalTAT += current.turnaroundTime;
                completed++;
            }

            // After this execution, add any newly arrived processes (arrivalTime <= current time)
            while (i < n && p[i].arrivalTime <= time) {
                queue.add(p[i]);
                i++;
            }

            // If current process is not finished, add it back to the end of the queue
            if (current.remainingTime > 0)
                queue.add(current);
        }

        // ---------------- display results for Round Robin ----------------
        System.out.println("\nPID\tAT\tBT\tPR\tCT\tTAT\tWT");
        for (Process pr : p) {
            System.out.printf("P%d\t%d\t%d\t%d\t%d\t%d\t%d\n",
                    pr.pid, pr.arrivalTime, pr.burstTime, pr.priority,
                    pr.completionTime, pr.turnaroundTime, pr.waitingTime);
        }

        // Print averages
        System.out.printf("\nAverage Waiting Time: %.2f\n", (double) totalWT / n);
        System.out.printf("Average Turnaround Time: %.2f\n", (double) totalTAT / n);

        // Print Gantt Chart for Round Robin
        System.out.println("\nGantt Chart:");
        System.out.print("| ");
        for (String s : gantt) System.out.print(s + " | ");
        System.out.println();
    }
}
